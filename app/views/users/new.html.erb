<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-md-12">
			<div class="title_container">
				<h1>SIGN UP TO</h1>
				<%= image_tag("mysize_logo.png") %>
			</div>
    		<% unless flash[:alert].blank? %>
    			<div class="alert alert-danger"><%= flash[:alert] %></div>
    		<% end %>
    		<div >
				<%= form_for @user, :html => {:autocomplete => "off"} do |f| %>
					<div class="textbox_container">
						<% unless @user.errors.blank? %> 
							<div class="alert alert-danger"><%=  @user.errors.full_messages.join(", ") %></div>
						<% end %>
						<%= f.text_field :username, class: 'mysize_textbox bottom_border_textbox', placeholder: 'USERNAME' %>
						<%= f.password_field :password, class: 'mysize_textbox', placeholder: 'PASSWORD' %>
					</div>
					<div class="textbox_container">
						<%= f.text_field :first_name, class: 'mysize_textbox bottom_border_textbox', placeholder: 'FIRST NAME' %>
						<%= f.text_field :last_name, class: 'mysize_textbox', placeholder: 'LAST NAME' %>
		  			</div>
	  				<%= button_tag( id: 'new_user_next_button', class: 'azure_button', type: :submit) do %>
	  					NEXT
	                  <%= image_tag("login_arrow.png")%>
	                <% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>