<div class="container-fluid">
	<div class="row">
		<div class="well col-xs-12 col-md-12">
			<% if @current_user %>
				Currently signed in as <%= @current_user.display_name %>.
				<%= link_to 'Log out', logout_path %>.
				<% unless @result.blank? %>
					<div class="alert alert-success">The suggested size for this product is <%= @result.name %></div>	
				<% end %>	
			<% else %>
				<h1>Sign in with your mySizeId</h1>

	    		<% unless flash[:alert].blank? %>
	    			<div class="alert alert-danger"><%= flash[:alert] %></div>
	    		<% end %>

				<%= form_tag login_path, :method => :post do %>
		  			<div class="form-group">
						<%= label_tag :username %>
						<%= text_field_tag :username, params[:username], class: 'form-control', placeholder: 'email' %>
		  			</div>

		  			<div class="form-group">
						<%= label_tag :password %>
						<%= password_field_tag :password, params[:password], class: 'form-control', placeholder: 'password' %>
		  			</div>

					<%= submit_tag 'submit', class: 'btn btn-default' %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>